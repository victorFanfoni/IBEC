<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#024A6E">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="601dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-13dp"
        android:layout_marginBottom="-98dp"
        android:src="@drawable/icone_white"
        />

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="281dp"
        android:layout_height="164dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/bg_toolbar" />



    <ImageView
        android:layout_width="245dp"
        android:layout_height="160dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="-17dp"
        android:src="@drawable/logo_ibec_vertical" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="73dp"
        android:layout_marginTop="123dp"
        android:text="A IGREJA QUE SEMPRE ESTA COM VOCE"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar"
        android:layout_marginTop="29dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Esqueceu a senha?"
        android:textSize="18sp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText"
        android:layout_margin="20dp"
        android:layout_centerHorizontal="true"
        android:autofillHints="emailAddress"
        android:background="@drawable/background_edittext"
        android:backgroundTint="#FFFFFF"
        android:drawableEnd="@drawable/ic_email"
        android:hint="Digite seu E-mail"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button_enviar"
        android:layout_width="302dp"
        android:layout_height="39dp"
        android:layout_below="@+id/edit_email"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bg_btn"
        android:text="Enviar" />

    <Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@drawable/backgroud_view_bottom" />

    <TextView
        android:id="@+id/btn_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/toolbar4"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="14dp"
        android:text="Voltar ao Login"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />


</RelativeLayout>
